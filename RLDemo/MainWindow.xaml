<Window x:Class="RLDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Name="_peopleBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=People}" />
        <Grid Grid.Row="1">
            <Button Click="results_click">Results</Button>
        </Grid>
    </Grid>
</Window>
